<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/passero_one</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/passero_one</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

        <!-- Aplica cantos arredondados -->
        <item name="android:background">@drawable/button_background</item>

        <!-- Remove animação do Material -->
        <item name="android:stateListAnimator">@null</item>

        <!-- Remove elevação se quiser deixar flat -->
        <item name="android:elevation">8dp</item>

        <item name="backgroundTint">@color/selectColor</item>
    </style>
</resources>