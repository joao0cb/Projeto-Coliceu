<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiente"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@null"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBemVindo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/passero_one"
        android:gravity="center"
        android:padding="16dp"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2.5"
        android:text="BEM-VINDO"
        android:textColor="@color/fontColor"
        android:textSize="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mapeie sítios arqueológicos, e tenha cartões de identificação para artefatos."
        android:fontFamily="@font/passero_one"
        android:textColor="@color/hintColor"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBemVindo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÃO LOGIN -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="LOGIN"
        android:fontFamily="@font/passero_one"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        app:backgroundTint="@color/selectColor"
        app:cornerRadius="8dp"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/tvDescricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"/>

    <!-- BOTÃO CADASTRO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCadastro"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="CADASTRO"
        android:fontFamily="@font/passero_one"
        android:textColor="@color/fontColor"
        android:textSize="30sp"
        app:backgroundTint="@color/selectColor"
        app:cornerRadius="8dp"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="26dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
