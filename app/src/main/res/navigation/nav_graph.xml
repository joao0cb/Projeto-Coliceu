<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Tela inicial -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projetocoliceu.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_home_to_cadastro"
            app:destination="@id/cadastroUsuarioFragment" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.projetocoliceu.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_cadastro"
            app:destination="@id/cadastroUsuarioFragment" />

        <action
            android:id="@+id/action_login_to_mapa"
            app:destination="@id/mapsFragment" />
    </fragment>

    <!-- Cadastro de Usu치rio -->
    <fragment
        android:id="@+id/cadastroUsuarioFragment"
        android:name="com.example.projetocoliceu.ui.auth.CadastroUsuarioFragment"
        android:label="Cadastro de Usu치rio"
        tools:layout="@layout/fragment_cadastro">

        <action
            android:id="@+id/action_cadastro_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Lista de Mapas -->
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.projetocoliceu.ui.map.MapsFragment"
        android:label="Meus Mapas"
        tools:layout="@layout/fragment_maps">

        <action
            android:id="@+id/action_maps_to_mapaArqueologico"
            app:destination="@id/mapaArqueologicoFragment" />
    </fragment>

    <!-- Mapa Arqueol칩gico -->
    <fragment
        android:id="@+id/mapaArqueologicoFragment"
        android:name="com.example.projetocoliceu.ui.map.MapaArqueologicoFragment"
        android:label="Mapa Arqueol칩gico"
        tools:layout="@layout/fragment_map">

        <argument
            android:name="mapId"
            app:argType="string" />

        <action
            android:id="@+id/action_mapaArqueologico_to_artifactList"
            app:destination="@id/artifactListFragment" />

        <action
            android:id="@+id/action_mapaArqueologico_to_artifactDetail"
            app:destination="@id/artifactDetailFragment">
            <argument
                android:name="mapId"
                app:argType="string" />
        </action>
    </fragment>

    <!-- Lista de Artefatos -->
    <fragment
        android:id="@+id/artifactListFragment"
        android:name="com.example.projetocoliceu.ui.artifact.ArtifactListFragment"
        android:label="Artefatos"
        tools:layout="@layout/fragment_artifact_list">

        <action
            android:id="@+id/actionArtifactListToArtifactDetail"
            app:destination="@id/artifactDetailFragment">
            <argument
                android:name="mapId"
                app:argType="string"
                android:defaultValue="" />
        </action>
    </fragment>

    <!-- Detalhes do Artefato -->
    <fragment
        android:id="@+id/artifactDetailFragment"
        android:name="com.example.projetocoliceu.ui.artifact.ArtifactDetailFragment"
        android:label="Detalhes do Artefato"
        tools:layout="@layout/fragment_artifact">

        <argument
            android:name="mapId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
